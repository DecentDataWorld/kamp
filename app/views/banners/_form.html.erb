<%= simple_form_for(@banner) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">

    <div class="form-group">
      <%= f.input :visible, id: 'visible', label: 'Click below to show this banner on the homepage' %>
    </div>

    <div class="form-group">
      <label for="name">Banner Type</label>
      <%= f.input_field :banner_type, as: :select, collection: ['KaMP Competition'], class: "form-control", id: 'banner_type', placeholder: 'Banner Type' %>
    </div>

    <%= render partial: 'form_intro', locals: { f: f } %>
    <%= render partial: 'form_col1', locals: { f: f } %>
    <%= render partial: 'form_col2', locals: { f: f } %>
    <%= render partial: 'form_footnote', locals: { f: f } %>

  </div>

  <div class="form-group text-center">
    <%= f.button :submit, class: 'btn btn-primary' %>
  </div>
<% end %>
