<div class="card">
  <div class="card-body">
    <h5 class="card-title"><%= t('headers.cop.list') %></h5>
    <div class="table-responsive">
      <table class="table table-striped table-sm">
        <thead>
          <tr>
            <th><%=t('activerecord.attributes.cop.name') %></th>
            <th><%=t('activerecord.attributes.cop.description') %></th>
            <th>
                <span  class="float-end"><%= link_to t('navigation.new_cop'), new_cop_path, class: "btn btn-outline-primary " %></span>
            </th>
          </tr>
        </thead>
        <tbody>
        <% @cops.each do |c| %>
          <tr>
            <td><%= c.name %></td>
            <td><%= c.description %></td>
            <td>
              <span class="float-end"><%= link_to t('navigation.edit'), edit_cop_path(c), class: "btn btn-outline-primary " %></span>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>