
<!--=== Content Part ===-->
<div class="container content">
  <div class="row">
    <div class="col-sm-9">
      <%= link_to 'New Category', new_category_path, class: 'btn btn-u pull-right' %>
      <p>Click on a tag below to view it or use one of the available buttons</p>
      <table class="table table-condensed">
        <thead>
        <tr>
          <th>Name</th>
          <th>Description</th>
          <th># Tags</th>
          <th></th>
          <th></th>
          <th></th>
        </tr>
        </thead>

        <tbody>
        <% @categories.each do |category| %>
            <tr>
              <td><%= category.name %>
              </td>
              <td><%= category.description %></td>
              <td><%= category.tag_list.count %></td>
              <td><%= link_to 'Show', category %></td>
              <td><%= link_to 'Edit', edit_category_path(category) %></td>
              <td><%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
        <% end %>
        </tbody>
      </table>

      <%= render 'categories/unused_tags' %>

    </div>
    <div class="col-md-3">
      <%= render 'admin/sidebar' %>
    </div>
  </div>
</div>

