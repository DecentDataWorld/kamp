<%= form_with model: @organization_type, local: true do |form| %>
  <% if @organization_type.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@organization_type.errors.count, t('errors.error')) %>
        <%= t('errors.prohibited') %>
      </h2>
      <ul>
        <% @organization_type.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row g-3">
    <div class="col-md-12">
      <span class="text-danger">*</span><%= form.label :name %><br>
      <%= form.text_field :organization_type, class: "form-control" %>
    </div>

    <div class="form-group col-md-12">
      <% if current_page?(new_organization_type_path) || @organization_type.id == nil %>
        <%= form.submit t('helpers.submit.create', model: OrganizationType.model_name.human), class: "btn btn-outline-primary" %>
      <% else %>
        <%= form.submit t('helpers.submit.update', model: OrganizationType.model_name.human), class: "btn btn-outline-primary" %>
          <span class="float-end"><%= link_to t('navigation.delete'), organization_type_path(@organization_type),
            data: { turbo_confirm: "Are you sure you want to delete this Organization Type?", turbo_method: :delete }, class: "btn btn-outline-danger" %></span>
      <% end %>
      <%= link_to t('navigation.cancel'), organization_types_path, class: "btn btn-outline-secondary" %>
    </div>
  </div>
<% end %>
