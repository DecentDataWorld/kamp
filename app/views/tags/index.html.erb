<div class="card">
  <div class="card-body">
    <h5 class="card-title"><%= t('headers.tag.list') %></h5>
    <div class="table-responsive">
      <table class="table table-striped table-sm">
        <thead>
          <tr>
            <th><%=t('activerecord.attributes.tag.name') %></th>
            <th><%=t('activerecord.attributes.tag_type.name') %></th>
            <th>
                <span  class="float-end"><%= link_to t('navigation.new_tag'), new_tag_path, class: "btn btn-outline-primary " %></span>
            </th>
          </tr>
        </thead>
        <tbody>
        <% @tags.each do |t| %>
          <tr>
            <td><%= t.name %></td>
            <td><%= t.tag_type.name %></td>
            <td>
                <span  class="float-end"><%= link_to t('navigation.edit'), edit_tag_path(t), class: "btn btn-outline-primary " %></span>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>