
<!-- ======= Breadcrumbs ======= -->
<section id="breadcrumbs" class="breadcrumbs">
    <div class="container">
      <ol>
        <li><%= link_to root_path do %><%=t('navigation.home')%><% end %></li>
        <% if can? :manage, :all %>
          <li><%= link_to admin_index_path do %><%=t('navigation.administration')%><% end %></li>
        <% end %>
        <li>Moderate Submissions</li>
      </ol>
    </div>
</section><!-- End Breadcrumbs -->

<!-- ======= About Section ======= -->
<section id="about" class="about">
  <div class="container">
    <div class="row">
      <div class="col-3 border-end">
      <% if can? :manage, :all %>
        <h5 class="border-bottom pb-2"><i class="bi bi-toggles2"></i> <%=t('navigation.administration')%></h5>
        <%= render 'admin/side_nav' %>
        <br/>
      <% else %>
        <h5 class="border-bottom pb-2">Moderate Submissions</h5>
       <% end %>
      </div>

      <div class="col-9">
        <%= render :partial => 'admin/show_pending_submissions', :locals => { :pending_submissions => @pending_submissions} %>
        <div class="apple_pagination">
          <%= will_paginate @pending_collections %>
        </div>
      </div>
    </div>
  </div>
</section><!-- End About Section -->

