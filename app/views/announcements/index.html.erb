<!-- ======= Breadcrumbs ======= -->
<section id="breadcrumbs" class="breadcrumbs">
  <div class="container">
    <ol>
      <li><%= link_to root_path do %><%=t('navigation.home')%><% end %></li>
      <li><%= link_to admin_index_path do %><%=t('navigation.administration')%><% end %></li>
      <li>Announcements</li>
    </ol>
  </div>
</section><!-- End Breadcrumbs -->

<!-- ======= About Section ======= -->
<section id="about" class="about">
  <div class="container">
    <div class="row">
      <div class="col-3 border-end">
        <h5 class="border-bottom pb-2"><i class="bi bi-megaphone"></i> Announcements</h5>
        <%= render 'admin/side_nav' %>
        <br/>
      </div>

      <div class="col-9">
        <div class="h5 border-bottom text-end mt-n3 mb-0 pb-1"><%= link_to "New Announcement", new_announcement_path, class: "btn btn-outline-primary mt-1 pt-2" %></div>
        <div class="table-responsive">
          <table class="table table-striped table-hover" data-controller="table-sort">
            <thead>
              <tr>
                <th>Announcement</th>
                <th>Expiration Date</th>
                <th>COP</th>
              </tr>
            </thead>
            <tbody>
              <% @announcements.each do |t| %>
                <tr>
                  <td><%= link_to t.name, edit_announcement_path(t) %></td>
                  <td><%= t.expiration_date ? t.expiration_date.strftime("%Y-%m-%d") : "" %></td>
                  <td><%= t.cop ? t.cop.name : "N/A" %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</section>

