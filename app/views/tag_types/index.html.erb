<!-- ======= Breadcrumbs ======= -->
<section id="breadcrumbs" class="breadcrumbs">
  <div class="container">
    <ol>
      <li><%= link_to root_path do %><%=t('navigation.home')%><% end %></li>
      <li><%= link_to users_path do %><%=t('navigation.administration')%><% end %></li>
      <li><%= t('navigation.tag_types')%></li>
    </ol>
  </div>
</section><!-- End Breadcrumbs -->

<!-- ======= About Section ======= -->
<section id="about" class="about">
  <div class="container">
    <div class="row">
      <div class="col-3 border-end">
        <h5 class="border-bottom pb-2"><%=t('navigation.administration')%></h5>
          <%= render 'admin/side_nav' %>
          <br/>
        </div>

        <div class="col-9">
          <div class="border-bottom">
            <div class="table-responsive">
              <table class="table table-striped table-sm" data-controller="table-sort">
                <thead>
                  <tr>
                    <th><%=t('activerecord.attributes.tag.tag_type_name') %></th>

                    <th>
                      <span  class="float-end"><%= link_to t('navigation.new_tag_type'), new_tag_type_path, class: "btn btn-outline-primary" %></span>
                    </th>
                  </tr>
                </thead>
                <tbody>
                <% @tag_types.each do |t| %>
                  <tr>
                    <td><%= t.name %></td>
                    <td>
                      <span  class="float-end"><%= link_to t('navigation.edit'), edit_tag_type_path(t), class: "btn btn-outline-primary" %></span>
                    </td>
                  </tr>
                <% end %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>