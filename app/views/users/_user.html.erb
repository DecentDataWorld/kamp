<div id="role-options-<%= user.id %>" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="modalLabelSmall" aria-hidden="true">
  <%= simple_form_for user, :url => user_path(user), :html => {:method => :put, :class => 'form-horizontal' } do |f| %>
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <a class="close" data-dismiss="modal">&#215;</a>
          <h3>Change Role</h3>
        </div>
        <div class="modal-body">
              <div class="form-group">
                <label>Choose a new role: </label>
                <%= f.input_field :role_ids, :collection => Role.all, :as => :select, :id => 'role_ids_for-'+user.id.to_s, :label_method => lambda {|t| t.name.titleize}, :label => false, checked: user.role_ids.first, class: 'form-control' %>

          </div>
        </div>
        <div class="modal-footer">
          <%= f.submit "Change Role", :class => "btn btn-primary" %>
          <a class="btn btn-danger" data-dismiss="modal" href="#">Close</a>
        </div>
      </div>
    </div>
  <% end %>
</div>

