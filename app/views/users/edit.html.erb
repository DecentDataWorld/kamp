<!-- ======= Breadcrumbs ======= -->
<section id="breadcrumbs" class="breadcrumbs">
  <div class="container">
    <ol>
      <li><%= link_to root_path do %>Home<% end %></li>
      <li><%= link_to admin_index_path do %>Administration<% end %></li>
      <li><%= link_to users_path(:page => params[:page]) do %>Users<% end%></li>
      <li><%= link_to user_path(@user) do %><%= @user.name %><% end %></li>
      <li>Edit</li>
    </ol>
  </div>
</section><!-- End Breadcrumbs -->

<!-- ======= About Section ======= -->
<section id="about" class="about">
  <div class="container">
    <div class="row">
      <div class="col-3 border-end">
        <%= render partial: 'users/profile_navigation', locals: { :short=> true } %>
      </div>

      <div class="col-9">
      <div class="border-bottom pb-2"><span class="fs-5">Edit User</span></div>
        <div class="row pb-1 mt-2">
          <%= render 'form' %>
        </div>
      </div>
    </div>
  </div>
</section>

