<div class="team-member user-avatar text-center">
  <% if !@user.avatar.blank? %>
      <%= image_tag @user.avatar.url(:small), class: "img-responsive center-block", alt: @user.name %>
  <% end %>
  <% if !@user.title.nil? %>
      <p class="text-muted"><%= @user.title.capitalize %></p>
  <% end %>
  <% if !@user.about.nil? %>
      <p class="text-muted"><%= simple_format @user.about %></p>
  <% end %>
  <ul class="list-unstyled lists-v1">
    <li><i class="fa fa-angle-right"></i> Member For: <span class="text-muted"><%= time_ago_in_words(@user.created_at) %></span></li>
    <% if can? :manage, :all %>
        <li><i class="fa fa-angle-right"></i> Last login: <span class="text-muted"><%= time_ago_in_words(@user.last_sign_in_at) if !@user.last_sign_in_at.nil? %><%= "Never logged in" if @user.last_sign_in_at.nil? %></span></li>
    <% end %>
    <li><i class="fa fa-angle-right"></i> <%= @user.resources.count %> Resources Contributed</li>
    <li><i class="fa fa-angle-right"></i> <%= @user.collections_authored.count %> Collections Contributed</li>
  </ul>

</div>
<% if current_user == @user %>
    <ul class="nav nav-pills nav-stacked">
      <li class="active"><%= link_to 'My Profile', user_path(current_user) %></li>
      <li><%= link_to 'Edit Profile', edit_user_registration_path %></li>
      <li><%= link_to 'Sign Out', destroy_user_session_path, :method=>'delete' %></li>
    </ul>
<% end %>
