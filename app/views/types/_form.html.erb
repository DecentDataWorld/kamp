<%= simple_form_for(@type) do |f| %>
  <%= f.error_notification %>

    <div class="form-group">
      <label for="title">Type</label>
      <%= f.input_field :name, class: "form-control", id: 'name', placeholder: 'Enter type' %>
    </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
