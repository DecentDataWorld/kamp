<div class="card">
  <div class="card-body">
    <h5 class="card-title"><%= t('headers.event.list') %></h5>
    <div class="table-responsive">
      <table class="table table-striped table-sm">
        <thead>
          <tr>
            <th><%=t('activerecord.attributes.event.name') %></th>
            <th><%=t('activerecord.attributes.event.short_description') %></th>
            <th><%=t('activerecord.attributes.event.date') %></th>
            <th><%=t('activerecord.attributes.event.location') %></th>
            <th><%=t('activerecord.attributes.event.user') %></th>
            <th>
              <span class="float-end"><%= link_to t('navigation.new_event'), new_event_path, class: "btn btn-outline-primary " %></span>
            </th>
          </tr>
        </thead>
        <tbody>
        <% @events.each do |e| %>
          <tr>
            <td><%= e.name %></td>
            <td><%= e.short_description %></td>
            <td><%= e.date %></td>
            <td><%= e.location %></td>
            <td><%= e.user.name %></td>
            <td>
              <span class="float-end"><%= link_to t('navigation.edit'), edit_event_path(e), class: "btn btn-outline-primary " %></span>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>