

<!-- ======= Breadcrumbs ======= -->
<section id="breadcrumbs" class="breadcrumbs">
  <div class="container">
    <ol>
      <li><%= link_to root_path do %><%=t('navigation.home')%><% end %></li>
      <li><%= link_to admin_index_path do %><%=t('navigation.administration')%><% end %></li>
      <li>Events</li>
    </ol>
  </div>
</section><!-- End Breadcrumbs -->

<!-- ======= About Section ======= -->
<section id="about" class="about">
  <div class="container">
    <div class="row">
      <div class="col-3 border-end">
        <h5 class="border-bottom pb-2"><i class="bi bi-calendar-event"></i> Events</h5>
        <%= render 'admin/side_nav' %>
        <br/>
      </div>

      <div class="col-9">
        <div class="h5 border-bottom text-end mt-n3 mb-0 pb-1"><%= link_to "New Event", new_event_path, class: "btn btn-outline-primary mt-1 pt-2" %></div>
        <div class="table-responsive">
          <table class="table table-striped table-hover" data-controller="table-sort">
            <thead>
              <tr>
                <th><%=t('activerecord.attributes.event.name') %></th>
                <th><%=t('activerecord.attributes.event.date') %></th>
                <th><%=t('activerecord.attributes.event.location') %></th>
                <th><%=t('activerecord.attributes.event.cop') %></th>
              </tr>
            </thead>
            <tbody>
            <% @events.each do |e| %>
              <tr>
                <td><%= link_to e.name, edit_event_path(e) %></td>
                <td><%= e.start_date ? e.start_date.strftime("%Y-%m-%d") : "" %></td>
                <td><%= e.location %></td>
                <td><%= e.cop ? e.cop.name : "" %></td>
              </tr>
            <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</section>

