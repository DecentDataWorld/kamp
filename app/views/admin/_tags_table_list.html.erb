<table class="table table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>&nbsp;</th>
      <th>&nbsp;</th>
    </tr>
  </thead>
  <tbody>
  <% @full_tags_list.each do |tag| %>
      <tr>
        <td><%= tag.name %></td>
        <td><%= link_to 'Edit', edit_tag_path(:tag => tag.id) %></td>
        <td><%= link_to 'Delete', delete_tag_path(:tag=>tag.id), data: { confirm: 'Are you sure you want to delete this tag?' } %></td>
      </tr>
  <% end %>
  </tbody>
</table>
