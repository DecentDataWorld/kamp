
<div class="hero-box border-success card">
  <div class="card-body">
    <h3 class="card-title text-success">Events</h3>
    <div class="scrollable">
    <div class="row ps-2 pe-2 d-flex text-secondary card-text">
      <% @events.each do |e| %>
        <div class="border-bottom p-2">
          <span class="text-danger"><%= link_to e.name, show_event_path(e), data: { turbo_frame: "modal" } %></span><br>
          <small>event date <%= e.start_date.strftime("%Y-%m-%d") %></small>
        </div>
      <% end %>
      
    </div>
    </div>
    <div class="pt-2 d-flex flex-row-reverse">
      <%= link_to raw('more  &raquo;'), public_events_path %> 
    </div>
  </div>
</div>