<!-- ======= Top Bar ======= -->
<section id="topbar" class="d-flex align-items-center">
  <div class="container d-flex justify-content-center justify-content-md-between">
    <div class="contact-info d-flex align-items-center">
    <i class="bi bi-info-circle d-flex align-items-center"><a href="javascript:void(0);" id="help_link"> Help</a></i>
    <i class="bi bi-question-circle d-flex align-items-center ms-4"><%= link_to faq_path do %> FAQs<% end %></i>
    </div>
    <div class="social-links d-none d-md-flex align-items-center">
    <% if user_signed_in? %>
        <%= link_to user_path(current_user) do %><i class="fa fa-user"></i> Profile<% end %>
    <% end %>
    <% if user_signed_in? %>
        <% if @current_user.has_approved_org %>
            <%= link_to organization_path(@current_user.organizations.first) do %><i class="fa fa-building"></i> My Organization<% end %>
        <% else %>
            <%= link_to organization_apply_path do %><i class="fa fa-building"></i> My Organization<% end %>
        <% end %>
    <% end %>
    <% if user_signed_in? %>
        <%= link_to destroy_user_session_path, :method=>'delete' do %> <i class="fa fa-sign-out-alt"></i> Log Out <% end %>
    <% else %>
        <%= link_to new_user_session_path do %> <i class="fa fa-sign-in-alt"></i> Sign In <% end %>
        <%= link_to request_invite_path do %> <i class="fa fa-sign-in-alt"></i> Register <% end %>
    <% end %>
    </div>
  </div>
</section>