<%= turbo_frame_tag "modal" do %>

  <div class="modal fade" id="globalModal" tabindex="-1" aria-labelledby="globalLabel" aria-hidden="true" data-controller="modal" data-action="turbo:before-render@document->modal#hideBeforeRender">
    <div class="modal-dialog modal-lg modal-dialog-centered modal-dialog-scrollable " role="document">
      <div class="modal-content" id="modal_content">
        <div class="modal-header">
          <h4 class="modal-title" id="globalLabel"><%= title %></h4>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>

        <div class="modal-body modal_body" id="modal_body">
          <%= yield %>
        </div>
      </div>
    </div>
  </div>

<% end %>