  <!-- ======= Header ======= -->
  <header id="header" class="d-flex align-items-center">
    <div class="container">
    <div class="row">
      <div class="col-3 logo">
        <%= link_to root_path do %>
            <img src="/usaid_jordan.png" alt="" class="img-fluid">
        <% end %>
      </div>

      <div class="col-7">
        <% if @search.nil? %>
            <%  search = Search.new %>
        <% else %>
            <% search = @search %>
        <% end %>
        <div data-title="Welcome to the KaMP" data-intro="You can kick off a search from any page on the site using this bar">
          <%= render partial: 'searches/form', locals: { search: search } %>
        </div>
      </div>
      <div class="col-2 d-flex flex-row-reverse">
      <nav id="navbar" class="navbar">
        <ul>
        <% if user_signed_in? %>
          <li class="dropdown"><a href="#"><span>Add New</span> <i class="bi bi-chevron-down"></i></a>
            <ul>
              <li>
                  <%= link_to new_resource_path do %>
                      Add Resource
                  <% end %>
              </li>
              <li>
                  <%= link_to new_collection_path do %>
                      Add Collection
                  <% end %>
              </li>
            </ul>
          </li>
        <% else %>
          <li class="<%= 'active' if current_page?(new_users_path) %>">
          <%= link_to new_users_path do %>
                How to Contribute
            <% end %>
          </li>
        <% end %>
        </ul>
        <i class="bi bi-list mobile-nav-toggle"></i>
      </nav><!-- .navbar -->
      </div>
    </div>
    </div>
  </header><!-- End Header -->