  <!-- ======= Header ======= -->
  <header id="header" class="d-flex align-items-center">
    <div class="container d-flex justify-content-between align-items-center">

      <div class="logo">
        <%= link_to root_path do %>
            <img src="/usaid_jordan.png" alt="" class="img-fluid">
        <% end %>
      </div>

      <nav id="navbar" class="navbar">
        <ul>
          <li><%= link_to root_path, class: ('active' if current_page?(root_path)) do %>Home<% end %></li>

          <% if user_signed_in? and (can? :approve, Resource or can? :approve, Collection) %>
            <li>
              <%= link_to 'Moderate Submissions', moderate_submissions_path %>
            </li>
        <% end %>

        <% if user_signed_in? and can? :dashboard, current_user%>
            <li>
              <%= link_to 'Administration', admin_index_path %>
            </li>
        <% end %>

        <% if user_signed_in? %>
          <li class="dropdown"><a href="#"><span>Add New</span> <i class="bi bi-chevron-down"></i></a>
            <ul>
              <li>
                  <%= link_to new_resource_path do %>
                      Add Resource
                  <% end %>
              </li>
              <li>
                  <%= link_to new_collection_path do %>
                      Add Collection
                  <% end %>
              </li>
            </ul>
          </li>
        <% else %>
          <li class="<%= 'active' if current_page?(new_users_path) %>">
          <%= link_to new_users_path do %>
                How to Contribute
            <% end %>
          </li>
        <% end %>
        </ul>
        <i class="bi bi-list mobile-nav-toggle"></i>
      </nav><!-- .navbar -->

    </div>
  </header><!-- End Header -->