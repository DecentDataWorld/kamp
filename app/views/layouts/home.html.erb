<body>
<div class="wrapper">
  <!--=== Header ===-->
  <div class="header">
    <!-- Topbar -->
  <%= render  'layouts/header_bar' %>

  <%= render 'layouts/navigation_links' %>

  </div>
  <!--=== End Header ===-->

  <div class="body_content">
  <%= render 'layouts/messages' %>


  <!--=== Slider ===-->
  <div id="layerslider" style="width: 100%; height: 280px; margin: 0px auto;">
    <!-- First slide -->
    <div class="ls-slide" data-ls="slidedelay:6000;transition2d:25;">
      <img src="/img/amman_bg_1.jpg" class="ls-bg" alt="Amman Jordan"/>

      <img class="ls-l" src="/img/csv_preview.png" alt="CSV Format Resource" width="" style="top: 55%; left: 24%;"
           data-ls="offsetxin:left; durationin:1500; delayin:900; fadein:false; offsetxout:left; durationout:1000; fadeout:false;" />

      <img src="/img/map_preview.png" alt="GeoJSON Resource Preview"  class="ls-s-1" style=" top:62px; left: 19%;"
           data-ls="offsetxin:left; durationin:1500; delayin:1500; fadein:false; offsetxout:left; durationout:1000; fadeout:false;">

      <span class="bg-black-opacity ls-s-1" style=" text-transform: uppercase; line-height: 45px; font-size: 20px; color:#fff; top:60px; left: 250px; slidedirection : top; slideoutdirection : bottom; durationin : 3500; durationout : 3500; delayin : 1000;">
          Jordan Development<br>Knowledge Management Portal
      </span>

      <%= link_to new_search_path, class: "btn btn-primary rounded   ls-s-1", style: "padding: 9px 15px; font-size:20px; top:180px; left: 400px; slidedirection : bottom; slideoutdirection : top; durationin : 3500; durationout : 2500; delayin : 1000; " do %>
          <i class="fa fa-search"></i> Find Resources
      <% end %>

        <img class="ls-l" src="/kamp_video.png" alt="KaMP Video on YouTube" id="kamp_video" style="top: 55%; left: 76%; cursor: pointer;"
             data-ls="offsetxin:left; durationin:1500; delayin:900; fadein:false; offsetxout:left; durationout:1000; fadeout:false;" />

    </div>

    <!--Second Slide-->
    <div class="ls-slide" data-ls="slidedelay:6000;transition2d:93;">
      <img src="/img/amman_bg_3.jpg" class="ls-bg" alt="Amman Jordan">

      <% top_value = 70 %>
      <% top_value2 = 70 %>
      <% duration_in = 2500 %>
      <% @resources_viewed.each do |resource| %>

            <span class="bg-black-opacity ls-s-2" style=" color: #fff; font-weight: 200; font-size: 15px; top:<%= top_value2 %>px; left: 70px; slidedirection : top; slideoutdirection : bottom; durationin :  <%= duration_in %>; durationout : 500; ">
                <%= link_to resource_path(resource), style: 'color: #fff;' do %>

                  <i class="<%= resource.resource_icon %>"></i> <strong><%= resource.name.truncate(70) %></strong>
              <% end %>
            </span>

          <% top_value = top_value + 40 %>
          <% top_value2 = top_value2 + 40 %>
          <% duration_in = duration_in + 1000 %>
      <% end %>

      <a class="btn-u btn-u-blue ls-s1" href="#" style="padding: 9px 20px; font-size:20px; top:25px; left: 40px; slidedirection : bottom; slideoutdirection : bottom; durationin : 2500; durationout : 500; ">
        Most Popular Resources
      </a>

    </div>

  </div><!--/layer_slider-->
  <!--=== End Slider ===-->

  <%= yield %>

  <!--=== Footer Version 1 ===-->
  <div class="footer-v1">
    <%= render 'layouts/footer' %>

    <%= render 'layouts/copyright' %>

  </div>
  <!--=== End Footer Version 1 ===-->
    </div>
</div><!--/wrapper-->

<script type="text/javascript">
    jQuery(document).ready(function() {
        App.init();
        App.initSliders();
        LayerSlider.initLayerSlider();
        OwlRecentWorks.initOwlRecentWorksV2();

        $('#kamp_video').click(function(){
            window.location = '<%= about_index_url %>';
        });

        $('#help_link').click(function() {
            startIntro();
        });

    });
</script>

