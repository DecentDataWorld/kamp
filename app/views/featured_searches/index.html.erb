<div class="card">
  <div class="card-body">
    <h5 class="card-title"><%= t('headers.featured_search.list') %></h5>
    <div class="table-responsive">
      <table class="table table-striped table-sm">
        <thead>
          <tr>
            <th><%=t('activerecord.attributes.featured_search.name') %></th>

            <th>
              <span  class="float-end"><%= link_to t('navigation.new_featured_search'), new_featured_search_path, class: "btn btn-outline-primary" %></span>
            </th>

            <th>
              <span  class="float-end"><%= t('navigation.featured_search_url') %></span>
            </th>
          </tr>
        </thead>
        <tbody>
        <% @featured_searches.each do |t| %>
          <tr>
            <td><%= t.name %></td>
            <td><%= t.get_url %></td>
            <td>
               <span  class="float-end"><%= link_to t('navigation.edit'), edit_featured_search_path(t), class: "btn btn-outline-primary" %></span>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>