<!--=== Breadcrumbs ===-->
<div class="breadcrumbs">
  <div class="container">
    <h1 class="pull-left">Resend confirmation instructions</h1>
  </div><!--/container-->
</div><!--/breadcrumbs-->
<!--=== End Breadcrumbs ===-->

<!--=== Content Part ===-->
<div class="container content">
  <div class="row">
    <div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3">
      <%= simple_form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post, :class => 'reg-page' }) do |f| %>
          <%= devise_error_messages! %>
          <%= f.error_notification %>
          <%= f.full_error :confirmation_token %>
          <div class="reg-header">
            <h2>Resend confirmation instructions</h2>
          </div>
          <p>We'll send confirmation instructions.</p>

          <div class="input-group margin-bottom-20">
            <span class="input-group-addon"><i class="fa fa-user"></i></span>
            <%= f.email_field :email, required: true, :autofocus => true, class: 'form-control', placeholder: 'Enter email', id: 'email' %>
          </div>

          <div class="row">
            <div class="col-md-6">
              &nbsp;
            </div>
            <div class="col-md-6">
              <%= f.submit 'Resend confirmation instructions', :class => 'btn btn-color' %>
            </div>
          </div>

          <hr>

          <%= render "devise/shared/links" %>
      <% end %>
    </div>
  </div><!--/row-->
</div><!--/container-->
<!--=== End Content Part ===-->
