<!--=== Breadcrumbs ===-->
<div class="breadcrumbs">
  <div class="container">
    <h1 class="pull-left">Change your password</h1>
  </div><!--/container-->
</div><!--/breadcrumbs-->
<!--=== End Breadcrumbs ===-->

<!--=== Content Part ===-->
<div class="container content">
  <div class="row">
    <div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3">
      <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, :class => 'reg-page' }) do |f| %>
          <%= f.error_notification %>

          <%= f.input :reset_password_token, as: :hidden %>
          <%= f.full_error :reset_password_token %>

          <div class="reg-header">
            <h2>Change your password by entering and confirming in the fields below</h2>
          </div>

          <div class="input-group margin-bottom-20">
            <span class="input-group-addon"><i class="fa fa-lock"></i></span>
            <%= f.input :password, label: "New password", required: true, autofocus: true, autocomplete: "off" %>
          </div>

          <div class="input-group margin-bottom-20">
            <span class="input-group-addon"><i class="fa fa-lock"></i></span>
            <%= f.input :password_confirmation, label: "Confirm your new password", required: true, autocomplete: "off" %>
          </div>

          <div class="row">
            <div class="col-md-6">
              &nbsp;
            </div>
            <div class="col-md-6">
              <%= f.button :submit, "Change my password", :class => 'btn btn-color' %>
            </div>
          </div>

          <hr>

          <%= render "devise/shared/links" %>
      <% end %>
    </div>
  </div><!--/row-->
</div><!--/container-->
<!--=== End Content Part ===-->
