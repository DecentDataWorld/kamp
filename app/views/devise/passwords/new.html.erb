
<!-- ======= Breadcrumbs ======= -->
<section id="breadcrumbs" class="breadcrumbs">
  <div class="container">
    <ol>
      <li><%= link_to root_path do %><%=t('navigation.home')%><% end %></li>
      <li>Forgotten Password</li>
    </ol>
  </div>
</section><!-- End Breadcrumbs -->
    
<!-- ======= Services Section ======= -->
<section id="services" class="services">
  <div class="container">
    <div class="row">
      <div class="col-12">
        <h5 class="border-bottom pb-2 mb-5"><i class="bi bi-arrow-clockwise"></i> Forgot your password?</h5>

        <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :role => 'form', :class => 'reg-page'}) do |f| %>
         <%= devise_error_messages! %>
         <div class="row d-flex justify-content-center">
          <div class="form-outline mb-4 col-md-6">
            <%= f.email_field :email, :autofocus => true, class: 'form-control', placeholder: 'Email Address', id: 'email', title: 'Enter email address' %>
          </div>
        </div>
        <div class="row d-flex justify-content-center">
          <div class="form-outline mb-4 col-md-6 border-bottom pb-4">
            <%= f.submit 'Reset Password', :class => 'btn btn-outline-primary' %>
          </div>
        </div>
        <div class="row d-flex justify-content-center">
          <div class="form-outline mb-4 col-md-6 border-bottom pb-4">
            <%= link_to "Sign In", new_user_session_path %>
          </div>
        </div>
        <div class="row d-flex justify-content-center">
          <div class="form-outline mb-4 col-md-6 border-bottom pb-4">
            <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name) %>
          </div>
        </div>
        <div class="row d-flex justify-content-center">
          <div class="form-outline mb-4 col-md-6 border-bottom pb-4">
            <h6>Not Registered?</h6>
            <p> <%= link_to 'Request an Invite', request_invite_path, class: 'btn-u btn-u-blue btn-block text-center' %></p>
          </div>
        </div>


        <% end %>

      </div>
    </div>


  </div>
</section><!-- End Services Section -->

