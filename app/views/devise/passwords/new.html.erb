<!--=== Breadcrumbs ===-->
<div class="breadcrumbs">
  <div class="container">
    <h1 class="pull-left">Forgot Password</h1>
  </div><!--/container-->
</div><!--/breadcrumbs-->
<!--=== End Breadcrumbs ===-->

<!--=== Content Part ===-->
<div class="container content">
  <div class="row">
    <div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3">
      <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :role => 'form', :class => 'reg-page'}) do |f| %>
          <div class="reg-header">
            <h2>Forgot your password?</h2>
          </div>
          <p>We'll send password reset instructions.</p>
          <%= devise_error_messages! %>

          <div class="input-group margin-bottom-20">
            <span class="input-group-addon"><i class="fa fa-user"></i></span>
            <%= f.email_field :email, :autofocus => true, class: 'form-control', placeholder: 'Enter email', id: 'email' %>
          </div>

          <div class="row">
            <div class="col-md-6">
              &nbsp;
            </div>
            <div class="col-md-6">
              <%= f.submit 'Reset Password', :class => 'btn btn-color' %>
            </div>
          </div>

          <hr>

          <p>Remembered your password? <%= link_to 'Sign In', new_session_path(resource) %></p>
          <p>Not registered? <%= link_to 'Create an Account', new_user_registration_path %></p>
    <% end %>
    </div>
  </div><!--/row-->
</div><!--/container-->
<!--=== End Content Part ===-->

