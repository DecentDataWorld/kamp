<table class="table table-sm table-striped">
  <tbody>
    <% @subscriptions.each do |subscription| %>
      <% organization = Organization.find_by_id(subscription.subscribed_to_id) %>
        <tr>
          <td><%= link_to organization.name, organization %></td>
          <td class="text-end">
            <%= link_to("Unsubscribe", user_remove_subscription_url(id: current_user.id, subscribed_to: 'organization', subscribed_to_id: organization.id), :data => { turbo_method: :post, turbo_confirm: "Are you sure?" }, :method => :post, :class => 'btn btn-outline-danger btn-sm') %>
          </td>
        </tr>
    <% end %>
  </tbody>
</table>
