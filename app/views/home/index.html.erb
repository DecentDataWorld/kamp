  <!-- ======= Hero Section ======= -->
  <section id="hero">
    <div class="hero-container">
      <div id="heroCarousel" class="carousel">

        <div class="carousel-inner" role="listbox">


          <!-- Slide 2 -->
          <div class="carousel-item active" style="background-image: url(/img/amman_bg_2.jpg)">
            <div class="carousel-container">
              <div class="carousel-content">
              <div class="row">
                <div class="col-md-4 pt-3">
                  <div class="card card-body border-0 home-about-box">
                    <h2>Welcome to the <span>Jordan Knowledge Management Portal</span></h2>
                  
                    <div class="ps-5 pb-2">
                      This portal is a repository of development resources designed to improve sharing of data and information between the USAID/Jordan Mission, local implementing partners and development organizations within Jordan.
                      <br/> <%= link_to raw('Read more  &raquo;'), about_index_path %> 
                      &nbsp; &nbsp; <a href="https://www.youtube.com/embed/EwYX-O1HZHQ?si=qQ6plfbIJAol72hi" target="_blank">View introductory video  &raquo;</a>
                    </div>
                  </div>
                </div>
                <div class="col-md-8 align-middle">
                  <div class="row">
                    <div class="col-lg-6">
                      <div class="hero-box border-danger card">
                        <div class="card-body">
                          <h3 class="card-title text-danger pb-3">Find Resources</h3>
                          <p class="card-text">
                            <% if @search.nil? %>
                                <%  search = Search.new %>
                            <% else %>
                                <% search = @search %>
                            <% end %>
                            <div data-intro="Use this to box to search for resources and collections from the KaMP home page. Beneath the search bar, note the number of resources and collections uploaded to this repository, which is constantly increasing.">
                              <%= render partial: 'searches/form', locals: { search: search } %>
                            </div>
                            <div class="row pt-4 d-flex align-items-center text-secondary">
                              <div class="col d-flex justify-content-center">
                                <%= Resource.all.count %> Resources
                              </div>
                              <div class="col d-flex justify-content-center text-secondary">
                                <%= Collection.all.count %> Collections
                              </div>
                            </div>
                          </p>
                        </div>
                      </div>
                    </div>
                    <div class="col-lg-6">
                      <div class="hero-box border-success card" <% if !user_signed_in? %>
                        data-intro="Register for a free account here. You can access all public resources and collections without having an account on the KaMP, but to join an organization or a Community of Practice, or contribute resources to the KaMP repository, you will need to create an account. Click the envelope to begin the simple registration process."
                        <% end %>
                      >
                        <div class="card-body">
                          <%= render  'cops' %>
                        </div>
                      </div>
                    </div>
                  </div>
                   <div class="row">
                    <div class="col-lg-6">
                      <% if @announcements.length != 0 %>
                        <%= render  'announcements' %>
                      <% end %>
                    </div>
                    <div class="col-lg-6">
                      <% if @events.length != 0 %>
                        <%= render  'events' %>
                      <% end %>
                    </div>
                  </div>
                </div>
              </div>
                
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section><!-- End Hero -->

  <main id="main">

    <!-- ======= Featured Section ======= -->
    <section id="featured" class="featured">
      <div class="container" data-intro="Click on a topic to be taken to a list of relevant resources and collections.">

        <div class="row">
          <% @featured_searches.each do |fs| %>
            <div class="col-lg-3 pb-3">
              <div class="icon-box">
                <h3><a href="<%= fs.get_url %>">
                  <i class="<%= fs.icon_identifier %>"></i>
                  Learn About <br/>
                  <%= fs.name %>
                </a>
              </h3>
              </div>
            </div>
          <% end %>
        </div>

      </div>
    </section><!-- End Featured Section -->

    <section id="about" class="about">
      <div class="container">
        <div class="row">
          <div class="col-lg-6">
              <iframe width="100%" height="500px" src="https://www.youtube.com/embed/EwYX-O1HZHQ?si=qQ6plfbIJAol72hi" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" allowfullscreen></iframe>
          </div>
          <div class="col-lg-6">
            <p>USAID/Jordan created the Jordan Development KaMP â€“ a web-based repository of development information resources designed to improve sharing of data and information between the USAID/Jordan Mission, local implementing partners and development organizations within Jordan.</p>
            <p>The KaMP will be available to all interested development partners in Jordan and is populated with resources identified and uploaded by staff from USAID/Jordan, MESP, Implementing Partners and other portal users.</p>
            <p> <%= link_to raw('Read more  &raquo;'), about_index_path %> </p>

          </div>
        </div>
      </div>
    </section>
    


  </main><!-- End #main -->